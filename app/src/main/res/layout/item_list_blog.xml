<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/originate_icon"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_label_originate"/>

        <ImageView
            android:id="@+id/recommend_icon"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_label_recommend"/>

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是博客的标题"
            android:textColor="#000"
            android:textSize="15sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/blog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="这是博客的内容"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_aurthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="十二月魔"
            android:textColor="#000"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_aurthor"
            android:text="昨天 下午 11:11"
            android:textColor="#000"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="5"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/tv_comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_comment_count"
            android:src="@mipmap/ic_comment"/>

        <TextView
            android:id="@+id/tv_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_comment_icon"
            android:text="5"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/tv_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_view_count"
            android:src="@mipmap/ic_view"/>

    </RelativeLayout>

</LinearLayout>